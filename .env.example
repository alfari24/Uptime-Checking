# Configuration file path
CONFIG_FILE=./server/status-config.yaml

# Server configuration - using separate ports for frontend and API
PORT=17069
API_PORT=3001
HOST=0.0.0.0
CHECK_INTERVAL=1

# Database configuration
DB_PATH=./status.db
CLEANUP_DAYS=90

# Notification configuration (optional)
# APPRISE_API_SERVER=https://apprise.example.com/notify
# RECIPIENT_URL=tgram://bottoken/ChatID
# TIME_ZONE=Asia/Shanghai
# GRACE_PERIOD=5
# SKIP_NOTIFICATION_IDS=monitor1,monitor2

# Application title
APP_TITLE=Status Monitor

# API URL is automatically set to http://localhost:{API_PORT} by the start script
# You only need to set this if running frontend and backend on different machines
# STATUS_API_URL=http://api-server-ip:3001